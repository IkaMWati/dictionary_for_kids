<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soal1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/angka_a_popup"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jawabansoal1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/soal1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/angka_b"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jawabansoal2"
        android:background="@drawable/angka_c"
        android:layout_alignTop="@+id/jawabansoal1"
        android:layout_toRightOf="@+id/jawabansoal1"
        android:layout_toEndOf="@+id/jawabansoal1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jawabansoal3"
        android:layout_alignTop="@+id/jawabansoal1"
        android:layout_toLeftOf="@+id/jawabansoal1"
        android:layout_toStartOf="@+id/jawabansoal1"
        android:background="@drawable/angka_a"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SKOR :"
        android:layout_marginBottom="10dp"
        android:id="@+id/skor"
        android:layout_above="@+id/soal1"
        android:textColor="#f30"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />
</RelativeLayout>